.NodeControls > #Header
{
    flex-direction: row;
    align-items: center;
}

.NodeControls > #Header .Locked, .NodeControls > #Header .Disabled
{
    background-color: rgba(0, 0, 0, 0);
    border-width: 0px;
    /*margin-left: 4px;*/
    /*margin-right: 4px;*/
    width: 24px;
    height: 24px;
    /*margin-bottom: 7px;*/
    margin-top: -8px;
    justify-content: center;
    align-content: center;
}

.NodeControls > #Header .Locked > .unity-image
{
    width: 10px;
    height: 10px;
}

.NodeControls > #Header .Disabled > .unity-image
{
    width: 16px;
    height: 16px;
    margin-left: -2px;
}

